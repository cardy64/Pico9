<h1 align="center"><%= @article.title %></h1>

<p align="center"><iframe src=<%="/pico8_games/" + @article.pico_path + "/index.html"%> id="pico_iframe" width="700" height="650"></iframe></p>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<%= render "list_concepts", article: @article, show_delete: false %>

